{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ESNext",
    "moduleResolution": "node",
    "composite": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
